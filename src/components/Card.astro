---
import GithubIcon from "./icons/Github.astro"
import EyeIcon from "./icons/Eye.astro"
import SocialPill from "./SocialPill.astro"
import Badge from "./Badge.astro"

interface TagsProps {
  name: string
  icon: any
}

interface Props {
  title: string
  github: string
  deploy: string
  desc: string
  img: string
  tags: TagsProps[]
}

const { github, tags, deploy, img, desc, title } = Astro.props
---

<div class="flex flex-col gap-5 items-start justify-start mt-10">
  <h4 class="text-2xl font-semibold text-yellow-100">{title}</h4>
  <!-- tags -->
  <p class="opacity-80">{desc}</p>
  <div class="flex gap-4">
    {
      tags.map((tag: TagsProps) => (
        <Badge>
          {tag.icon && <tag.icon class="size-4" />}
          {tag.name}
        </Badge>
      ))
    }
  </div>
  <!-- img -->
  <img
    src={img}
    alt=`Captura de pantalla del proyecto : ${title}`
    class="h-auto rounded-md
    shadow-lg shadow-white/10"
  />
  <div class="flex gap-3 justify-end w-full mt-4">
    <SocialPill href={github}>
      <GithubIcon class="size-6" />
      Ver CÃ³gido
    </SocialPill>
    <SocialPill href={deploy}>
      <EyeIcon class="size-6" />
      Ver Proyecto
    </SocialPill>
  </div>
</div>
